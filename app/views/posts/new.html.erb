<%= form_for @post, :html => {:multipart => true} do |f| %>
  <%= f.label :city %>
  <%= f.text_field :city %><br>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :category %>
  <%= f.select :category, ['Clothes', 'Shoes', 'Accessories', 'Furniture', 'Electronics', 'Toys & Games', 'Household Items', 'Sporting Goods', 'Musical Instrument', 'Antiques', 'Other'], :prompt => 'Select One' %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.label :price %>
  <%= f.text_field :price %><br>

  <%= f.file_field :image %><br>

  <%= f.submit %>
<% end %>