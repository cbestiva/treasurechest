<%= form_for @post, :html => {:multipart => true} do |f| %>
  <div class="form-group">
    <%= f.label "City, State" %>
<!--     <input type="text" id="post_city"> -->
    <%= f.text_field :city %><br>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %><br>
  </div>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, ['Clothes', 'Shoes', 'Accessories', 'Furniture', 'Electronics', 'Toys & Games', 'Household Items', 'Sporting Goods', 'Musical Instrument', 'Antiques', 'Other'], :prompt => 'Select One' %><br>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %><br>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price %><br>
  </div>

  <div class="form-group">
    <%= f.label :contact %>
    <%= f.text_field :contact %><br>
  </div>

  <div class="from-group">
    <%= f.file_field :image %><br>
  </div>
  <%= f.submit %>
<% end %>