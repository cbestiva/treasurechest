<%= form_for @post, :html => {:multipart => true} do |f| %>
  <div class="form-group">
    <%= f.label "City, State" %><br>
    <%= f.text_field :city %><br>
  </div>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
  </div>

  <div class="form-group">
    <%= f.label :category %><br>
    <%= f.select :category, ['Clothes', 'Shoes', 'Accessories', 'Furniture', 'Electronics', 'Toys & Games', 'Household Items', 'Sporting Goods', 'Musical Instrument', 'Antiques', 'Other'], :prompt => 'Select One' %><br>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description %><br>
  </div>

  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price %><br>
  </div>

  <div class="form-group">
    <%= f.label :contact %><br>
    <%= f.text_field :contact %><br>
  </div>

  <div class="from-group">
    <%= f.file_field :image %><br>
  </div>
  <%= f.submit %> 
<% end %>