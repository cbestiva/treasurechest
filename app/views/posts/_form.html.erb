<%= form_for @post, :html => {:multipart => true} do |f| %>
  <div class="form-group">
    <%= f.label "City, State" %><br>
    <%= f.text_field :city %><br>
  </div>

  <div class="form-group">
    <%= f.hidden_field :key %>
    File: <%= @post.image_name %>
  </div>
  
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
  </div>

  <div class="form-group">
    <%= f.label :category %><br>
    <%= f.collection_select :category_id, Category.all, :id, :name, :prompt => 'Select One' %><br>
    <%#= f.select :category_id, [['Clothes',1], ['Shoes',2], ['Accessories',3], ['Furniture',4], ['Electronics',5], ['Toys & Games',6], ['Household Items',7], ['Sporting Goods',8], ['Musical Instrument',9], ['Antiques',10], ['Other',11]], :prompt => 'Select One' %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description %><br>
  </div>

  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price %><br>
  </div>

  <div class="form-group">
    <%= f.label :contact %><br>
    <%= f.text_field :contact %><br>
  </div>

<!--   <div class="from-group">
    <%#= f.file_field :image %><br>
  </div> -->
  <%= f.submit %> 
<% end %>