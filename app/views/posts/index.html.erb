<h3>Find treasures near you...</h3>
<%= form_tag posts_path, :method => "get" do %>
  Enter your city, state: <%= text_field_tag :search, params[:search], placeholder: "San Francisco, CA, United States", id: "post_city" %>
  Category: <%= select(:post, :category, [['Clothes'], ['Shoes'], ['Accessories'], ['Furniture'], ['Electronics'], ['Toys & Games'], ['Household Items'], ['Sporting Goods'], ['Musical Instrument'], ['Antiques'], ['Other']], :prompt => 'Select Category') %>
  <%= submit_tag "Search", :class => "submit_city" %>
<% end %>

